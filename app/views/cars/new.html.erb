<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Create a new car</h1>
      <%= simple_form_for @car do |f| %>
        <%= f.input :model %>
        <%= f.input :brand %>
        <%= f.input :year %>
        <%= f.input :description %>
        <%= f.input :place %>
        <%= f.input :price_per_day %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn btn-primary' %>


      <% end %>
    </div>
  </div>



<% @cars.each do |car| %>
<div class="img">
  <%= cl_image_tag car.photo.key, height: 300, width: 400, crop: :fill %>
</div>
<div class="card-body"> <h5 class="card-title"><%= car.brand %></h5>
  <p><%= car.model %></p>
  <p><%= car.description %></p>
   <%= link_to 'Details', car_path(car), class: 'btn btn-primary'%>
</div>
  <% end %>
  <%= link_to 'Create a car', new_car_path, class: 'btn btn-primary'  %>

  <% if policy(Car).create? %>
  <%= link_to "New car", new_car_path %>
<% end %>



